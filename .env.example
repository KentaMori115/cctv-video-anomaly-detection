# Video Anomaly Detection - Environment Configuration
# Copy to .env and modify as needed. All values have sensible defaults.

# Server
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_DEBUG=false

# Hardware (auto detects GPU if available)
APP_DEVICE=auto
APP_BATCH_SIZE=64
APP_NUM_WORKERS=4
APP_MIXED_PRECISION=true

# Model
APP_MODEL_PATH=outputs/trained_model.pth
APP_LATENT_DIM=256
APP_FRAME_SIZE=64

# Anomaly detection thresholds
# APP_THRESHOLD=0.005  # Uncomment to set manual threshold
APP_THRESHOLD_FACTOR=2.5
APP_THRESHOLD_PERCENTILE=95
APP_THRESHOLD_MODE=statistical

# Input validation limits
APP_MAX_FILE_SIZE_MB=100
APP_MAX_VIDEO_DURATION_SEC=300
APP_MAX_FRAMES=5000
APP_ALLOWED_EXTENSIONS=.mp4,.avi,.mov,.mkv,.webm

# Concurrency
APP_THREAD_POOL_SIZE=4
APP_REQUEST_TIMEOUT_SEC=300

# Logging
APP_LOG_LEVEL=INFO
APP_LOG_FORMAT=json
# APP_LOG_FILE=logs/app.log  # Uncomment to enable file logging

# Rate limiting
APP_RATE_LIMIT_ENABLED=true
APP_RATE_LIMIT_REQUESTS=10
APP_RATE_LIMIT_WINDOW_SEC=60

# Paths
APP_OUTPUT_DIR=outputs
APP_TEMP_DIR=temp
APP_STATIC_DIR=static
